<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zhenliu.backinstock">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_TASKS"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.zhenliu.backinstock.controller.MainActivity"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.zhenliu.backinstock.controller.BrowserActivity">
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation">

        </activity>

        <service
            android:name="com.zhenliu.backinstock.controller.BackgroundService"
            android:exported="false" />

        <receiver
            android:name="com.zhenliu.backinstock.controller.NetworkScheduler"
            android:process=":remote"/>

    </application>

</manifest>